<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoeditActivity">

    <ImageView
        android:id="@+id/prof_info_id"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_id" />

    <ImageView
        android:id="@+id/prof_info_name"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@+id/prof_info_id"
        app:layout_constraintTop_toBottomOf="@+id/prof_info_id"
        app:srcCompat="@drawable/info_edit_name" />

    <ImageView
        android:id="@+id/prof_info_pass"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@+id/prof_info_name"
        app:layout_constraintTop_toBottomOf="@+id/prof_info_name"
        app:srcCompat="@drawable/info_edit_pass" />

    <ImageView
        android:id="@+id/prof_info_age"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@+id/prof_info_pass"
        app:layout_constraintTop_toBottomOf="@+id/prof_info_pass"
        app:srcCompat="@drawable/info_edit_age" />


    <EditText
        android:id="@+id/prof_edit_age"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toEndOf="@+id/prof_info_name"
        app:layout_constraintTop_toTopOf="@+id/prof_info_age" />

    <EditText
        android:id="@+id/prof_edit_name"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/prof_info_name"
        app:layout_constraintStart_toStartOf="@+id/prof_edit_pass"
        app:layout_constraintTop_toTopOf="@+id/prof_info_name" />

    <TextView
        android:id="@+id/info_id"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/bmdohyeon"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/prof_info_id"
        app:layout_constraintStart_toStartOf="@+id/prof_edit_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prof_edit_pass"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/prof_info_name"
        app:layout_constraintStart_toStartOf="@+id/prof_edit_age"
        app:layout_constraintTop_toTopOf="@+id/prof_info_pass" />

    <TextView
        android:id="@+id/prof_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bmdohyeon"
        android:text="프로필 수정"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_submit"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="53dp"
        android:backgroundTint="#CCCCCC"
        android:fontFamily="@font/bmdohyeon"
        android:text="수정 완료"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_info_age" />


</androidx.constraintlayout.widget.ConstraintLayout>