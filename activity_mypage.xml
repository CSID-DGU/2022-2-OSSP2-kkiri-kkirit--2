<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="114dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/myprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_userid"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/bmdohyeon"
        android:text="닉네임"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:fontFamily="@font/bmdohyeon"
        android:text="님"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toEndOf="@+id/mypage_userid"
        app:layout_constraintTop_toTopOf="@+id/mypage_userid" />

    <Button
        android:id="@+id/goProfEdit"
        android:layout_width="210dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#CCCCCC"
        android:fontFamily="@font/bmdohyeon"
        android:text="프로필 수정"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_userid" />

    <TextView
        android:id="@+id/mypage_userPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/mypage_userPass"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_userAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/mypage_userName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gotomyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="53dp"
        android:text="내가 쓴 글"
        android:fontFamily="@font/bmdohyeon"
        android:textColor="@color/black"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:text="그룹 현황(배달)"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:fontFamily="@font/bmdohyeon"
        app:layout_constraintStart_toStartOf="@+id/gotomyText"
        app:layout_constraintTop_toBottomOf="@+id/gotomyText" />

    <TextView
        android:id="@+id/gotoGroupDeliv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="그룹 현황(맛집)"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:fontFamily="@font/bmdohyeon"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/gotoChkDegree"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="매너 온도"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:fontFamily="@font/bmdohyeon"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="@+id/gotoGroupDeliv"
        app:layout_constraintTop_toBottomOf="@+id/gotoGroupDeliv" />

    <Button
        android:id="@+id/logout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#CCCCCC"
        android:fontFamily="@font/bmdohyeon"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>